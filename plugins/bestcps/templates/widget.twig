<manialink id="{{id}}" version="3">
	<frame pos="-140 90">
	{% for data in checkpoints %}
        {% if data.prettyTime != "" %}
            <frame pos="{{ 31 * (loop.index0 % 8) }} -{{ (loop.index0 // 8 ) * 4.5 }}">            
            <label pos="2 -2" z-index="1" size="3 4" text="$n$o{{ loop.index }}" halign="center" textsize="0.9" valign="center2"/>
            <quad pos="2 -2" z-index="0" size="3 4" bgcolor="{{colors.title}}e" valign="center" halign="center" />

            <label pos="4.5 -2" z-index="1" size="15 4" text="{{ data.nickname }}" halign="left" textsize="0.9" valign="center2"/>
            <quad pos="3.75 -2" z-index="0" size="16 4" bgcolor="{{colors.bg}}e" valign="center" halign="left"/>

            <label pos="25 -2" z-index="1" size="10 4" text="$n$o{{ data.prettyTime }}" halign="center" textsize="0.9" valign="center2"/>
            <quad pos="25 -2" z-index="0" size="10 4" bgcolor="{{colors.title}}e" valign="center" halign="center"/>
            </frame>
        {% endif %}
{% endfor %}</frame>
</manialink>
