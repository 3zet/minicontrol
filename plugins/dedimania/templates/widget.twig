<manialink id="{{ id }}" version="3">

<frame pos="115 10">
    <label pos="15 0" z-index="1" size="30 4" textsize="1.5" textcolor="{{colors.title_fg}}" text="$oWorld Records" halign="center" valign="center2" />
    <quad pos="0 0" z-index="0" size="46 4" bgcolor="{{colors.title_bg}}e" valign="center" />

    {% for item in records %}      
        <label pos="1 -{{ (loop.index * 4) }}" z-index="1" size="30 4" textcolor="fff" textsize="1" text="{{item.rank}} {{ item.nickname }}" valign="center2" />    
        <label pos="34 -{{ (loop.index * 4) }}" z-index="1" size="14 4" textcolor="fff" textsize="1" text="{{ item.time }}" valign="center2"  />    
        <quad pos="0 -{{ (loop.index * 4) }}" z-index="0" size="46 4" bgcolor="{{colors.bg}}e" valign="center" action="{{action}}" />
            {% if loop.index == 10 %}
                <quad pos="0 -{{ 2+(loop.index * 4) }}" z-index="2" size="46 0.3" bgcolor="fffa" valign="center" />
            {% endif %}
    {% endfor %}
</frame>
</manialink>
