{% extends "manialink.twig" %}
{% block body %}
	<frame pos="-{{ size.width / 2 }} {{ size.height / 2 + pos.y }}" z-index="{{pos.z}}">
        <label pos="3 -3.5" z-index="1" size="{{size.width}} 6" text="{{title}}" textcolor="{{colors.title_fg}}" halign="left" textfont="GameFontSemiBold" textsize="2" valign="center2"/>
        <label pos="{{size.width -5}} -3" z-index="2" size="7 6" halign="center" valign="center2" action="{{actions.close}}" text="$n$ox" focusareacolor1="{{colors.title_bg}}" focusareacolor2="d00"/>
        <quad pos="0 -3" size="{{size.width}} 6" valign="center" z-index="-1" bgcolor="{{colors.title_bg}}" opacity="1" />
        <frame pos="4 -8">
        {% block content %} {% endblock %}
        </frame>
        <quad pos="0 -6" z-index="-1" size="{{size.width}} {{size.height}}" bgcolor="{{colors.bg}}"/>
    </frame>
{% endblock %}
